{
    "version": 2,
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/node"
      },
      {
        "src": "src/**/*",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "build"
        }
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/src/api/$1.js" },
      { "src": "/(.*)", "dest": "/build/$1" }
    ]
  }
  